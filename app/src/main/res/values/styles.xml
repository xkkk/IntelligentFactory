<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/global_bg_color</item>
    </style>

    <style name="AppTheme_Fullscreen" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme_Splash" parent="AppTheme_Fullscreen">
        <item name="android:windowBackground">@drawable/splash_bg_gif</item>
    </style>

        <!--开关样式-->
    <style name="Switch_checkbox_login" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_switch_bg_login</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
