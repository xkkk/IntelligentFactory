<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.common.coreuimodule">
    <!-- 扫描二维码 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:supportsRtl="true">
        <!-- 剪切 -->
        <activity
            android:name="com.cme.coreuimodule.base.clipimage.ClipImageActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- 拍照页面 -->
        <activity
            android:name="com.cme.coreuimodule.base.clipimage.TakePhotoActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!--web页面-->
        <activity
            android:name="com.cme.coreuimodule.base.web.SimpleWebActivity"
            android:configChanges="orientation|keyboardHidden"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.cme.coreuimodule.base.photo.ChoosePictureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <!-- 大图浏览页面 -->
        <activity
            android:name="com.cme.coreuimodule.base.bigimage.BigPicScanActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />
    </application>

</manifest>
