<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/linearlayout_bg_selector"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_right"
        android:layout_alignBottom="@+id/tv_right"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image"
        android:textSize="?attr/fontSize_2"
        tools:text="智能机器人" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="5dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/icon"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="15"
        android:singleLine="true"
        android:textColor="@color/global_text_color_hint" />
</RelativeLayout>