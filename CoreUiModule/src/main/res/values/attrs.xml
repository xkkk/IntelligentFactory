<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TabView">
        <attr name="tab_textViewSelColor" format="reference|color" />
        <attr name="tab_textViewUnSelColor" format="reference|color" />
        <attr name="tab_tabViewBackgroundColor" format="reference|color" />
        <attr name="tab_tabViewHeight" format="dimension|reference" />
        <attr name="imageViewTextViewMargin" format="dimension|reference" />
        <attr name="tab_textViewSize" format="dimension|reference" />
        <attr name="tab_imageViewWidth" format="dimension|reference" />
        <attr name="tab_imageViewHeight" format="dimension|reference" />
        <attr name="tab_tabViewGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
        </attr>
        <attr name="tab_tabViewDefaultPosition" format="integer" />
    </declare-styleable>
    <declare-styleable name="isFont">
        <attr name="fontSize_0" format="dimension|reference" />
        <attr name="fontSize_1" format="dimension|reference" />
        <attr name="fontSize_2" format="dimension|reference" />
        <attr name="fontSize_3" format="dimension|reference" />
        <attr name="fontSize_4" format="dimension|reference" />
        <attr name="fontSize_5" format="dimension|reference" />
        <attr name="fontSize_6" format="dimension|reference" />
        <attr name="fontSize_7" format="dimension|reference" />
        <attr name="fontSize_8" format="dimension|reference" />
        <attr name="fontSize_9" format="dimension|reference" />
        <attr name="fontSize_10" format="dimension|reference" />
        <attr name="fontSize_11" format="dimension|reference" />
        <attr name="fontSize_12" format="dimension|reference" />
        <attr name="push_height" format="dimension|reference" />
    </declare-styleable>
    <!--发送验证码View-->
    <declare-styleable name="SendVerifyCodeView">
        <!--发送之前的文本提示-->
        <attr name="before_send_text" format="reference|string" />
        <!--发送中的文本提示-->
        <attr name="send_ing" format="reference|string" />
        <!--发送后的文本提示-->
        <attr name="send_after" format="string|reference" />
        <!--发送成功之后等待的时间-->
        <attr name="wait_time" format="integer" />
        <!--发送按钮的背景-->
        <attr name="background" format="reference" />
    </declare-styleable>
    <!--通用标题-->
    <declare-styleable name="CommonTitle">
        <attr name="showBack" format="boolean" />
        <attr name="showDivideLine" format="boolean" />
        <attr name="titleCenter" format="reference|string" />
        <attr name="titleRight" format="reference|string" />
        <attr name="iv_left" format="reference" />
        <attr name="iv_right" format="reference" />
        <attr name="title_bg_color" format="reference|color" />
        <attr name="title_text_color" format="reference|color" />
    </declare-styleable>

    <!--登录等使用的inputView-->
    <declare-styleable name="InputItemView">
        // 文本输入类型
        <attr name="input_editText_Type">
            <enum name="string" value="101" />
            <enum name="number" value="102" />
            <enum name="phone" value="103" />
            <enum name="pwd" value="104" />
        </attr>
        <attr name="input_max_length" format="integer" />
        <attr name="iv_tag" format="reference" />
        <attr name="input_hint" format="string|reference" />
        <attr name="input_show_hide_image" format="boolean" />
        <attr name="input_show_del_image" format="boolean" />
    </declare-styleable>
    <!--通用item-->
    <declare-styleable name="CommonItem1">
        <attr name="img_item" format="reference" />
        <attr name="text_item" format="reference" />
        <attr name="textsize_item" format="string|reference" />
        <attr name="textcolor_item" format="reference" />
        <attr name="background_item" format="reference" />
        <attr name="arrow_item" format="reference" />
        <attr name="right_text_item" format="string|reference" />
        <attr name="right_textsize_item" format="reference" />
        <attr name="right_textcolor_item" format="reference" />
    </declare-styleable>
    <declare-styleable name="ic_jpush_drop_down_list_attr">
        <attr name="isDropDownStyle" format="boolean" />
        <attr name="isOnBottomStyle" format="boolean" />
        <attr name="isAutoLoadOnBottom" format="boolean" />
    </declare-styleable>
    <!--取景框-->
    <declare-styleable name="Viewfinder">
        <attr name="pwHeight" format="integer"/>
        <attr name="pwWidth" format="integer"/>
        <attr name="pwTipText" format="string"/>
        <attr name="pwTipTextSize" format="dimension"/>
    </declare-styleable>
    <!--取景框-->
    <declare-styleable name="ClipImageView">
        <attr name="civHeight" format="integer" />
        <attr name="civWidth" format="integer" />
        <attr name="civTipText" format="string" />
        <attr name="civTipTextSize" format="dimension" />
        <attr name="civMaskColor" format="color" />
        <attr name="civClipPadding" format="dimension" />
        <attr name="civClipRoundCorner" format="dimension|reference" />
        <attr name="civClipCircle" format="boolean" />
    </declare-styleable>
    <!--控制TextView的Drawable属性的大小-->
    <declare-styleable name="DrawableTextView">
        <attr name="drawableWidth" format="dimension|reference" />
        <attr name="drawableHeight" format="dimension|reference" />
    </declare-styleable>

    <!--与ViewPager配合使用的CircleIndicator-->
    <declare-styleable name="CircleIndicator">
        <attr name="ci_width" format="dimension" />
        <attr name="ci_height" format="dimension" />
        <attr name="ci_margin" format="dimension" />
        <attr name="ci_animator" format="reference" />
        <attr name="ci_animator_reverse" format="reference" />
        <attr name="ci_drawable" format="reference" />
        <attr name="ci_drawable_unselected" format="reference" />
        <attr name="ci_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="ci_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
    </declare-styleable>

    <declare-styleable name="StepProgressView">
        <attr name="secondProgressColor" format="reference|color" />
        <attr name="secondProgress_bg" format="reference" />
    </declare-styleable>

    <declare-styleable name="MyEmojiEditText">
        <attr name="emoji_max_length" format="integer" />
    </declare-styleable>
    <declare-styleable name="ShowAllTextView">
        <attr name="minTextSize" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"/>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
    <!--链接自动识别TextView-->
    <declare-styleable name="AutoLinkTextView">
        <attr name="specialTextColor" format="color|reference"/>
    </declare-styleable>

    <!--圆形图片控件-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--设置字体大小控件-->
    <declare-styleable name="SetTextSizeView">
        <attr name="lineWidth" format="dimension|reference" />
        <attr name="lineColor" format="color|reference" />
        <attr name="totalCount" format="integer" />
        <attr name="circleColor" format="color|reference" />
        <attr name="circleRadius" format="dimension|reference" />
        <attr name="minText" format="string|reference" />
        <attr name="maxText" format="string|reference" />
        <attr name="standardText" format="string|reference" />
        <attr name="standardPosition" format="integer" />
        <attr name="textColor" format="color|reference" />
    </declare-styleable>

</resources>